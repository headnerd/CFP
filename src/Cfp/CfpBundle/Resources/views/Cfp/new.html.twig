{% extends '::layout.html.twig' %}

{% block title %}Create a new CFP{% endblock %}

{% block body %}
<h1>Create a new CFP for {{ conference.name }}</h1>

<form action="{{ path('CfpCfpBundle_create_cfp') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('CfpCfpBundle_show_my_cfps') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}