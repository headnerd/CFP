{% extends '::layout.html.twig' %}

{% block title %}Submission{% endblock %}

{% block body %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Remarks</th>
            <td>{{ entity.remarks }}</td>
        </tr>
        <tr>
            <th>Submitted on</th>
            <td>{{ entity.dtcreated|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Talk</th>
            <td>{{ entity.talk.title }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('CfpCfpBundle_show_my_submissions', {'registration_id': registration.id}) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('CfpCfpBundle_edit_submission', { 'registration_id': registration.id, 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('CfpCfpBundle_delete_submission', { 'registration_id': registration.id, 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
