{% extends '::layout.html.twig' %}

{% block title %}Create a new talk{% endblock %}

{% block body %}
<h1>Talk creation</h1>

<form action="{{ path('CfpUserBundle_create_talk') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('CfpUserBundle_show_my_talks') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
